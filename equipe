<!-- === Mini lecteur audio persistant === -->
 <div class="audio-mini-panel" id="miniLecteur" style="position:fixed;bottom:16px;right:16px;z-index:9999;">
    <button id="playPause" aria-label="Lecture/Pause audio">▶️</button>
    <input type="range" id="volume" min="0" max="1" step="0.05" value="1" aria-label="Volume audio" style="width:80px;">
</div>
<audio id="musique">
  <source src="Niska - Adriano (Clip Officiel).mp3" type="audio/mpeg">
</audio>
<script>
const audio = document.getElementById('musique');
const btn = document.getElementById('playPause');
const volume = document.getElementById('volume');


// 🔹 Restaurer la position et le volume
const savedTime = localStorage.getItem('musicTime');
if (savedTime) audio.currentTime = parseFloat(savedTime);

const savedVol = localStorage.getItem('musicVol');
audio.volume = savedVol ? parseFloat(savedVol) : 0.5;
volume.value = audio.volume;

// 🔹 Lecture automatique si possible
audio.play().then(() => {
  btn.textContent = "⏸️";
}).catch(() => {
  console.log("Lecture bloquée, l'utilisateur doit appuyer sur ▶️");
});

// 🔹 Bouton Play / Pause
btn.addEventListener('click', () => {
  if (audio.paused) {
    audio.play();
    btn.textContent = "⏸️";
  } else {
    audio.pause();
    btn.textContent = "▶️";
  }
});

// 🔹 Volume
volume.addEventListener('input', () => {
  audio.volume = volume.value;
  localStorage.setItem('musicVol', volume.value);
});

// 🔹 Sauvegarder la position toutes les secondes
setInterval(() => {
  localStorage.setItem('musicTime', audio.currentTime);
}, 1000);
</script>
